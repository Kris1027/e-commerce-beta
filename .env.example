# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Database (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://user:password@localhost:5432/ecommerce_db?schema=public"

# Authentication (NextAuth v5)
# AUTH_URL is automatically inferred in development (http://localhost:3000)
# In production, set it to your production URL (e.g., https://yourdomain.com)
AUTH_URL=http://localhost:3000

# Generate secret with: openssl rand -base64 32
# Or use: npx auth secret
# IMPORTANT: Always use a unique, random secret in production
AUTH_SECRET=your-auth-secret-here-min-32-chars

# Optional: Authentication Security Settings
# AUTH_TRUST_HOST=true # Set in production if behind a proxy
# AUTH_MAX_AGE=2592000 # Session max age in seconds (30 days)

# Stripe
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Email (Resend)
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_...

# Cloudinary
# Get credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret